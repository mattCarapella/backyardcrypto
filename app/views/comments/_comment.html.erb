<%= div_for (comment) do %>
	<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><%= comment.body %></p>
			<p>
				<small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago </strong> by <%= comment.user.username %></small>
				<% if comment.user == current_user %>
					<%= link_to "Delete", coin_post_comment_path(comment.post.coin.id, comment.post.id, comment.id), method: :delete, data: { confirm: "Do you want to delete this submission?" } %>
				<% end %>
			</p>
		</div>
	
		<div class="btn-group pull-right">
			
		</div>
	
	</div>
<% end %>