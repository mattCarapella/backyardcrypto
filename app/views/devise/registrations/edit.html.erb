<div class='form-container'>
	<h2>Edit Account Info</h2>

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		<div class="form-container__section">
			<%= f.error_notification %>

			<% if current_user.admin? %> 
				<p>Make Moderator?</p>
				<%= f.select :moderator, options_for_select([[" ", " "],['Yes', true], ['No', false]]) %>
			<% end %>
				
			<%= f.input :email, required: true, autofocus: true, class: 'form-control' %>
			<%= f.input :username, required: true, autofocus: true, class: 'form-control' %>
			<%= f.input :fname, label: false, placeholder: "First Name", autofocus: true, class: 'form-control' %>
			<%= f.input :lname, label: false, placeholder: "Last Name", autofocus: true, class: 'form-control' %>
			<%= f.input :wallet, label: false, placeholder: "Public Litecoin Wallet (For Payouts)", autofocus: true, class: 'form-control' %>	
			<%= f.text_area :bio, label: false, placeholder: "Biography", autofocus: true, class: 'form-control', rows: 10 %>  

			<p class="file-upload-text"><b>Photo ID</b> (Pictures must be in .jpg, .gif, or .png format and less than 5MB)</p>
			<%= f.file_field :id_photo, id: 'file-upload', accept: 'image/jpeg,image/gif,image/png' %>
			<br>

			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
			<% end %>
			<%= f.input :password, autocomplete: "off", hint: "Leave it blank if you don't want to change it", required: false, class: 'form-control' %>
			<%= f.input :password_confirmation, required: false, class: 'form-control' %>
			<%= f.input :current_password, hint: "We need your current password to confirm your changes", required: true, class: 'form-control' %>
			<div class="form-container__horizontal-button-group">
				<%= f.button :submit, "Update", class: "primary-small" %>
				<%= link_to "Back", :back, class: "secondary-small" %>
			</div>
		<% end %>
	</div>

		<br>
		<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>


	</div>


