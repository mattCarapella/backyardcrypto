<% content_for :title, "backyard.crypto | Sign In" %>
<div id="particles-js"></div>
<div class="login-container">
	<h1>Login</h1>
	<div id="user-forms">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	    <%= f.input :login, autofocus: true, placeholder: "Username/Email", label: false %>
	    <%= f.input :password, required: false, placeholder: "Password", label: false %>
			<button type="submit" class="form-actions">
					<i class="fas fa-angle-right"></i>
			</button>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
	<div class="contribute-container-background">
		<div class="contribute-container">
			<button class="contribute-container__submit-button secondary-small">
				Help the Community - Donate
			</button>
		</div>
	</div>
</div>
