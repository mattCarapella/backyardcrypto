<% provide(:title, "Edit Link") %>
<h1> Edit Link </h1>
<% if can? :edit, Link and current_user = @link.coin.moderator %>
	<div id="edit-link">
		<%= simple_form_for @link, url: coin_link_path(@coin.id) do |f| %>	
			<%= f.input :websitename, :label => "Website Name", class: 'form-control' %>
			<%= f.input :url, :label => "URL", class: 'form-control' %>
			<%= f.hidden_field :coin_id, value: @coin.id %>

<!-- 			<% if can? :edit, Coin %>
				Accept?<br>
