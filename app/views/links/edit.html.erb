				<%= f.select :accepted, options_for_select([[@link.accepted == true ? 'Yes' : 'No', @link.accepted == true ? true : false], [@link.accepted == true ? 'No' : 'Yes', @link.accepted == true ? false : true]]) %>
			<% end %> -->

			<%= hidden_field_tag(:coin_id, @coin.id) %>
			<%= f.button :submit, 'Submit', class: "secondary-small" %>
